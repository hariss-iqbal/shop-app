{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/icons/**",
          "/**/*.+(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "catalog-api",
      "urls": [
        "*/rest/v1/phones*",
        "*/rest/v1/brands*",
        "*/rest/v1/phone_images*"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "1h",
        "strategy": "freshness",
        "timeout": "5s"
      }
    },
    {
      "name": "sales-api",
      "urls": [
        "*/rest/v1/sales*",
        "*/rest/v1/receipts*",
        "*/rest/v1/customers*"
      ],
      "cacheConfig": {
        "maxSize": 200,
        "maxAge": "30m",
        "strategy": "freshness",
        "timeout": "5s"
      }
    },
    {
      "name": "admin-api",
      "urls": [
        "*/rest/v1/suppliers*",
        "*/rest/v1/purchase_orders*",
        "*/rest/v1/store_locations*",
        "*/rest/v1/location_inventory*",
        "*/rest/v1/inventory_transfers*"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "15m",
        "strategy": "freshness",
        "timeout": "5s"
      }
    },
    {
      "name": "storage-images",
      "urls": [
        "*/storage/v1/object/public/phone-images/*"
      ],
      "cacheConfig": {
        "maxSize": 200,
        "maxAge": "7d",
        "strategy": "freshness",
        "timeout": "3s"
      }
    }
  ],
  "navigationUrls": [
    "/**",
    "!/**/*.*",
    "!/**/.*",
    "!/**/*__*",
    "!/**/*__*/**"
  ]
}
